#=====================================================================#
#         LibreChat - Hugging Face Spaces Configuration              #
#=====================================================================#
# This file is pre-configured for deployment on Hugging Face Spaces  #
#                                                                     #
# REQUIRED: Set these in your HF Space Settings (Secrets):           #
#   - HUGGINGFACE_TOKEN: Your HF API token                           #
#   - MONGO_URI: Your MongoDB Atlas connection string                #
#                                                                     #
# Get free MongoDB Atlas: https://www.mongodb.com/atlas/database     #
# Get HF token: https://huggingface.co/settings/tokens               #
#=====================================================================#

#==================================================#
#               Server Configuration               #
#==================================================#

HOST=0.0.0.0
PORT=7860

# MongoDB - Set MONGO_URI in HF Spaces secrets!
# Example: mongodb+srv://user:password@cluster.mongodb.net/LibreChat
MONGO_URI=

# Domain settings - HF Spaces will provide the domain automatically
DOMAIN_CLIENT=
DOMAIN_SERVER=

# Disable search indexing
NO_INDEX=true
TRUST_PROXY=1

#===============#
# Debug Logging #
#===============#

DEBUG_LOGGING=true
DEBUG_CONSOLE=false
CONSOLE_JSON=false

#===================================================#
#         Hugging Face Inference API                #
#===================================================#
# Set HUGGINGFACE_TOKEN in HF Spaces secrets!

# HUGGINGFACE_TOKEN=hf_xxxx  # Set this in HF Spaces Secrets!

#===================================================#
#                     Endpoints                     #
#===================================================#

# Disable other endpoints - use HF Inference API only
ENDPOINTS=

# Disable user-provided keys for demo
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_KEY=

#============#
# Plugins    #
#============#

DEBUG_PLUGINS=false

# Generate new random keys for security
CREDS_KEY=
CREDS_IV=

#==================================================#
#                      Search                      #
#==================================================#

# Disable MeiliSearch for simpler HF deployment
SEARCH=false
MEILI_NO_ANALYTICS=true

#==================================================#
#          Speech to Text & Text to Speech         #
#==================================================#

STT_API_KEY=
TTS_API_KEY=

#===================================================#
#                    User System                    #
#===================================================#

#========================#
# Moderation             #
#========================#

OPENAI_MODERATION=false
BAN_VIOLATIONS=false

#========================#
# Registration and Login #
#========================#

# Allow easy demo access
ALLOW_EMAIL_LOGIN=true
ALLOW_REGISTRATION=true
ALLOW_SOCIAL_LOGIN=false
ALLOW_SOCIAL_REGISTRATION=false
ALLOW_PASSWORD_RESET=false
ALLOW_UNVERIFIED_EMAIL_LOGIN=true

# Session expiry in milliseconds (15 minutes = 900000)
SESSION_EXPIRY=900000
# Refresh token expiry in milliseconds (7 days = 604800000)
REFRESH_TOKEN_EXPIRY=604800000

# Generate secure random secrets for production!
# Set these in HF Spaces Secrets for security
JWT_SECRET=
JWT_REFRESH_SECRET=

#========================#
# Shared Links           #
#========================#

ALLOW_SHARED_LINKS=true
ALLOW_SHARED_LINKS_PUBLIC=true

#===================================================#
#                        UI                         #
#===================================================#

APP_TITLE=LibreChat HF Demo
HELP_AND_FAQ_URL=https://librechat.ai

#==================================================#
#                      Others                      #
#==================================================#

NODE_ENV=production
